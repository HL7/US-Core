                                        "valueBoolean": true
                                    }
                                ]
                            },
                            {
                                "extension": [
                                    {
                                        "url": "http://hl7.org/fhir/StructureDefinition/elementdefinition-type-must-support",
                                        "valueBoolean": false
                                    }
                                ]
                            },
                            {
                                "extension": [
                                    {
                                        "url": "http://hl7.org/fhir/StructureDefinition/elementdefinition-type-must-support",
                                        "valueBoolean": false
                                    }
                                ]
                            },
                            {
                                "extension": [
                                    {
                                        "url": "http://hl7.org/fhir/StructureDefinition/elementdefinition-type-must-support",
                                        "valueBoolean": false
                                    }
                                ]
                            },
                            {
                                "extension": [
                                    {
                                        "url": "http://hl7.org/fhir/StructureDefinition/elementdefinition-type-must-support",
                                        "valueBoolean": false
                                    }
                                ]
