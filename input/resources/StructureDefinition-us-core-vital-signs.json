                    "rules": "open"
                },
                "min": 1,
                "max": "*",
                "mustSupport": true
            },
            {
                "id": "Observation.category:VSCat",
                "path": "Observation.category",
                "sliceName": "VSCat",
                "patternCodeableConcept": {
                    "coding": [
                        {
                            "system": "http://terminology.hl7.org/CodeSystem/observation-category",
                            "code": "vital-signs"
                        }
                    ]
                },
                "mustSupport": true
            },
            {
                "id": "Observation.code",
