                    "valueSet": "http://hl7.org/fhir/ValueSet/ucum-vitals-common|4.0.1"
                }
            },
            {
                "id": "Observation.component.dataAbsentReason",
                "extension": [
                    {
                        "url": "http://hl7.org/fhir/us/core/StructureDefinition/uscdi-requirement",
